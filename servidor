#!/usr/bin/env python3
import asyncio
from tcp import Servidor
import re


def validar_nome(nome):
    return re.match(br'^[a-zA-Z][a-zA-Z0-9_-]*$', nome) is not None


def sair(conexao):
    print(conexao, 'conexão fechada')
    conexao.fechar()


def dados_recebidos(conexao, dados):
    if dados == b'':
        return sair(conexao)
    # Converte os dados em uma string
    mensagem = dados.decode('utf-8')
    
    # Verifica se a mensagem é um PING
    if mensagem.startswith('PING'):
        payload = mensagem[5:]  # Remove 'PING ' do início da mensagem
        resposta = f':server PONG server :{payload}\r\n'
        conexao.enviar(resposta.encode('utf-8'))
    else:
        print(conexao, mensagem)


def conexao_aceita(conexao):
    print(conexao, 'nova conexão')
    conexao.registrar_recebedor(dados_recebidos)


servidor = Servidor(6667)
servidor.registrar_monitor_de_conexoes_aceitas(conexao_aceita)
asyncio.get_event_loop().run_forever()
